{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@lib/*": ["src/lib/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"],
      "@server/*": ["src/server/*"],
      "@seed/*": ["src/seed/*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["jest.setup.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
